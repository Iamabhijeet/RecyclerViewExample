<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:id="@+id/toolbar"
    android:minHeight="?attr/actionBarSize"
    app:theme="@style/Platform.ThemeOverlay.AppCompat.Dark"
    android:background="#8bccf8"
    style="@style/TextAppearance.AppCompat.Title">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contacts"
            style="@style/Base.Widget.AppCompat.ListPopupWindow"
            android:textColor="#060945"
            android:textSize="@dimen/abc_dropdownitem_icon_width" />

    </RelativeLayout>

</android.support.v7.widget.Toolbar>